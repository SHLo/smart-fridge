{
  "$schema-template": "4.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "docker": {
                "username": "$CONTAINER_REGISTRY_USERNAME_docker",
                "password": "$CONTAINER_REGISTRY_PASSWORD_docker",
                "address": "docker.io"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.2",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.2",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "Eye": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.Eye.debug}",
              "createOptions": {
                "HostConfig": {
                  "Privileged": true,
                  "Devices": [
                    {
                      "PathOnHost": "/dev/vchiq",
                      "PathInContainer": "/dev/vchiq",
                      "CgroupPermissions": "mrw"
                    }
                  ]
                }
              }
            },
            "env": {
              "DB_HOST": {
                "value": "$DB_HOST"
              },
              "DB_KEY": {
                "value": "$DB_KEY"
              },
              "DATABASE_ID": {
                "value": "$DATABASE_ID"
              },
              "CV_ENDPOINT": {
                "value": "$CV_ENDPOINT"
              },
              "CV_PROJECT_ID": {
                "value": "$CV_PROJECT_ID"
              },
              "CV_PREDICTION_KEY": {
                "value": "$CV_PREDICTION_KEY"
              },
              "CV_PUBLISHED_NAME": {
                "value": "$CV_PUBLISHED_NAME"
              },
              "COG_SRV_ENDPOINT": {
                "value": "$COG_SRV_ENDPOINT"
              },
              "COG_SRV_KEY": {
                "value": "$COG_SRV_KEY"
              },
              "RECOGNIZED_TYPES": {
                "value": "$RECOGNIZED_TYPES"
              }
            }
          },
          "Mouth": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.Mouth}",
              "createOptions": {
                "HostConfig": {
                  "Devices": [
                    {
                      "PathOnHost": "/dev/snd",
                      "PathInContainer": "/dev/snd",
                      "CgroupPermissions": "mrw"
                    }
                  ]
                }
              }
            },
            "env": {
              "AWS_DEFAULT_REGION": {
                "value": "$AWS_DEFAULT_REGION"
              },
              "AWS_ACCESS_KEY_ID": {
                "value": "$AWS_ACCESS_KEY_ID"
              },
              "AWS_SECRET_ACCESS_KEY": {
                "value": "$AWS_SECRET_ACCESS_KEY"
              }
            }
          },
          "Tray": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.Tray.debug}",
              "createOptions": {
                "HostConfig": {
                  "Privileged": true,
                  "Devices": [
                    {
                      "PathOnHost": "/dev/gpiomem",
                      "PathInContainer": "/dev/gpiomem",
                      "CgroupPermissions": "mrw"
                    }
                  ]
                }
              }
            },
            "env": {
              "PRESSURE_THRESHOLD": {
                "value": "$PRESSURE_THRESHOLD"
              },
              "GAS_MONITORING_PERIOD": {
                "value": "$GAS_MONITORING_PERIOD"
              }
            }
          },
          "Bookkeeper": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.Bookkeeper}",
              "createOptions": {
                "HostConfig": {}
              }
            },
            "env": {
              "DB_HOST": {
                "value": "$DB_HOST"
              },
              "DB_KEY": {
                "value": "$DB_KEY"
              },
              "DATABASE_ID": {
                "value": "$DATABASE_ID"
              },
              "CATEGORIES_CONTAINER_ID": {
                "value": "$CATEGORIES_CONTAINER_ID"
              },
              "WAREHOUSE_CONTAINER_ID": {
                "value": "$WAREHOUSE_CONTAINER_ID"
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "routes": {
          "EyeToMouth": "FROM /messages/modules/Eye/outputs/mouth INTO BrokeredEndpoint(\"/modules/Mouth/inputs/script\")",
          "BookkeeperToMouth": "FROM /messages/modules/Bookkeeper/outputs/mouth INTO BrokeredEndpoint(\"/modules/Mouth/inputs/script\")",
          "EyeToBookkeeper": "FROM /messages/modules/Eye/outputs/bookkeeper INTO BrokeredEndpoint(\"/modules/Bookkeeper/inputs/eye\")",
          "TrayToBookkeeper": "FROM /messages/modules/Tray/outputs/bookkeeper INTO BrokeredEndpoint(\"/modules/Bookkeeper/inputs/tray\")",
          "TrayToEye": "FROM /messages/modules/Tray/outputs/eye INTO BrokeredEndpoint(\"/modules/Eye/inputs/tray\")"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    }
  }
}
